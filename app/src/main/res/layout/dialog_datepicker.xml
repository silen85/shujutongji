    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/interval_line_height"
        android:layout_marginBottom="@dimen/interval_C"
        android:layout_marginTop="@dimen/interval_C"
        android:background="@color/REPORT_UI_C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/interval_A"
        android:paddingRight="@dimen/interval_A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="开始"
            android:textColor="@color/REPORT_UI_C2" />

        <TextView
            android:id="@+id/datepicker_bdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text=""
            android:textColor="@color/REPORT_UI_C1"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/interval_line_height"
        android:layout_marginBottom="@dimen/interval_C"
        android:layout_marginLeft="@dimen/interval_A"
        android:layout_marginRight="@dimen/interval_A"
        android:layout_marginTop="@dimen/interval_C"
        android:background="@color/REPORT_UI_C4" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/REPORT_UI_C6"
        android:calendarTextColor="@color/REPORT_UI_C2"
        android:calendarViewShown="false"
        android:dayOfWeekBackground="@color/REPORT_UI_C6"
        android:headerBackground="@color/REPORT_UI_C6"
        android:spinnersShown="true"></DatePicker>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/interval_line_height"
        android:layout_marginBottom="@dimen/interval_C"
        android:layout_marginLeft="@dimen/interval_A"
        android:layout_marginRight="@dimen/interval_A"
        android:layout_marginTop="@dimen/interval_C"
        android:background="@color/REPORT_UI_C4" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/interval_A"
        android:paddingRight="@dimen/interval_A">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text="结束"
            android:textColor="@color/REPORT_UI_C2" />

        <TextView
            android:id="@+id/datepicker_edate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="8dp"
            android:text=""
            android:textColor="@color/REPORT_UI_C2"

            />

    </RelativeLayout>

</LinearLayout>